<%- include("partials/header", {stylesheet: "nowplaying.css", title: "Now Playing"}) %>

<% const imgBaseURL = "https://image.tmdb.org/t/p/w500"; %>
<% const movieBaseURL = "https://www.themoviedb.org/movie/" %>

<div class="container">
    <h1 class="text-center">Now playing at a theater near you!</h1>
    <% results.forEach(element => { %>
        <div class="inner border rounded p-3 my-3 mx-auto w-75">
            <a href="<%= `${movieBaseURL}${element.id}` %>" target="_blank"><h1><%= element.title %></h1></a>
            <p><%= element.overview %></p>
            <p>Rating: <%= element.vote_average %> out of 10</p>
            <img src="<%= `${imgBaseURL}${element.poster_path}` %>" alt="<%= element.title %> poster image" class="mx-auto d-block">
        </div>
    <% }) %>
</div>
<div class="tmdb">
    <p>This product uses the TMDb API but is not endorsed or certified by <a href="https://www.themoviedb.org/">TMDb</a></p>
    <a href="https://www.themoviedb.org/"><img src="images/tmdb.svg" alt="The Movie Database logo"></a>
</div>

<%- include("partials/footer") %>